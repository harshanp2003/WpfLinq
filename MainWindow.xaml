<Window x:Class="WpfLinq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLinq"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center">Enter the Numbers</Label>
            <TextBox Background="Aquamarine" Name="Input_text" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,0" Height="200" Width="400"/>
            <Button Name="Compute" Click="Calculate" Margin="10" Width="400">Compute</Button>

            <TextBlock Name="Larger" Margin="10" Background="AliceBlue" Width="400"></TextBlock>
            <TextBlock Name="Sorted" Margin="10" Background="AliceBlue" Width="400"/>
            <TextBlock Name="Squared" Margin="10" Background="AliceBlue" Width="400"/>
           
        </StackPanel>
       
    </Grid>
</Window>
